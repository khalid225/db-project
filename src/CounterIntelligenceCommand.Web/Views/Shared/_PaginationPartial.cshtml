@model PaginationModel

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.ShowPrevious)
        {
            <li class="page-item">
                <a class="page-link" asp-route="@Model.Route" asp-route-limit="@Model.PageSize" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Previous">
                    Previous
                </a>
            </li>
        }
        @if (Model.ShowNext)
        {
            <li class="page-item">
                <a class="page-link" asp-route="@Model.Route" asp-route-limit="@Model.PageSize" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Next">
                    Next
                </a>
            </li>
        }
        
    </ul>
</nav>